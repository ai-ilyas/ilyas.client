{
  "compilerOptions": {
    "module": "CommonJS",                      // Système de module
    "declaration": true,                       // Générer des fichiers `.d.ts`
    "outDir": "./dist",                        // Répertoire de sortie
    "strict": true,                            // Activer toutes les vérifications strictes
    "esModuleInterop": true,                   // Interopérabilité avec les modules ES
    "skipLibCheck": true,                      // Ignorer la vérification des fichiers de déclaration
    "forceConsistentCasingInFileNames": true,  // Forcer la casse cohérente dans les noms de fichiers
    "sourceMap": true,                         // Générer des fichiers `.map` pour le débogage
    "moduleResolution": "node",                // Résolution des modules comme Node.js
    "rootDir": "./src",                        // Répertoire racine des fichiers source
    "resolveJsonModule": true,                 // Permettre l'importation de fichiers JSON
    "noImplicitAny": true                      // Désactiver les types implicites `any`
  },
  "include": ["src/**/*"],                     // Inclure tous les fichiers dans `src`
  "exclude": ["node_modules", "dist"]          // Exclure ces répertoires
}
